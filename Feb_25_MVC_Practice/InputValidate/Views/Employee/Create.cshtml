@model InputValidate.Models.Department
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 col-md-6">
    <div class="card shadow p-4">
        <h3 class="text-center mb-4">Add Department</h3>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label>Department Name</label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Department Code</label>
                <input asp-for="DeptCode" class="form-control" />
                <span asp-validation-for="DeptCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Submit
            </button>
        </form>
    </div>
</div>