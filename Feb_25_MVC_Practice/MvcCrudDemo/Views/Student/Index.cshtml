@model List<StudentCRUD.Models.Student>

<h2>Student List</h2>

<a href="/Student/Create">Add New Student</a>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Course</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Course</td>
            <td>
                <a href="/Student/Edit/@item.Id">Edit</a> |
                <a href="/Student/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>