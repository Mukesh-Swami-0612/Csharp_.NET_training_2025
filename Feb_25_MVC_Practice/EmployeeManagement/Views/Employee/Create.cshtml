@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Create Employee";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Create Employee</h2>

    @using (Html.BeginForm())
    {
        <div class="mb-3">
            <label>Name</label>
            @Html.TextBoxFor(m => m.EmpName,
                new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email,
                new { @class = "form-control", type = "email" })
        </div>

        <div class="mb-3">
            <label>Salary</label>
            @Html.TextBoxFor(m => m.Salary,
                new { @class = "form-control", type = "number" })
        </div>

        <div class="mb-3">
            <label>Department</label>
            @Html.DropDownList("DeptId",
                ViewBag.DepartmentList as SelectList,
                "Select Department",
                new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

        @Html.ActionLink("Back", "Index", null,
            new { @class = "btn btn-secondary" })
    }
</div>